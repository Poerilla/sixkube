<h1>SixKube Articles and Blogs</h1>
<%= link_to 'SixKube', controller: 'articles' %>


<%= link_to 'New article', new_article_path %>
<h1>Listing Articles</h1> 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.author %></td>
      <td><%= link_to 'Show', article_path(article), :class => "btn btn-primary btn-sm" %></td>
      <td><%= link_to 'Edit', edit_article_path(article) , :class => "btn btn-primary btn-sm"%></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } , :class => "btn btn-primary btn-sm"%></td>
    </tr>
  <% end %>
</table>
